<script type="text/ecmascript">
  $(document).ready(function () {

    var nav = $('#selectNav');
    $('nav li a').each(function () {

      var anchor = $(this);

      var option = $('<option />', {
        value: anchor.attr('href'),
        text: anchor.text()
      });
      
      nav.append(option);
    });

    nav.change(function () {
      window.location = $(this).find("option:selected").val();
    });
  });
</script>