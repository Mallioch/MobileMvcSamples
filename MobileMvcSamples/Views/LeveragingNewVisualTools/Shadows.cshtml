@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Shadows</title>
  <link href="/content/coveragechart.css" rel="stylesheet" type="text/css" />
  <style>
    .text-shadowing {
      font-family: Helvetica, Verdana, sans-serif;
      font-size: 2em;
      line-height: 1.8em;
      text-shadow: 5px 20px 5px #000;
    }

    .box-shadowing {
      border: solid 1px #000;
      -webkit-box-shadow: 2px 10px 15px rgba(150, 150, 150, 1);
      box-shadow: 2px 10px 15px rgba(150, 150, 150, 1);
      height: 100px;
      width: 100px;
    }
  </style>
</head>
<body>
  <h1>Shadows</h1>

  <p>Creating shadows used to require putting images in the page. No more!</p>

  <h2>Text Shadows</h2>

  <p class="text-shadowing">This paragraph has text shadows.</p>

  @Html.DeviceCoverage()

  <h2>Box Shadows</h2>

  <div class="box-shadowing">

  </div>

  @Html.DeviceCoverage("BoxShadows")

</body>
</html>
