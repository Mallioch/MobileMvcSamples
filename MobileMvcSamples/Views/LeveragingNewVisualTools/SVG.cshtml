@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SVG</title>
  <link href="/content/coveragechart.css" rel="stylesheet" type="text/css" />
</head>
<body>
  <h1>SVG</h1>

  <p>Inline SVG</p>

  <svg xmlns="http://www.w3.org/2000/svg" height="100" width="100">
    <circle r="50" cx="50" cy="50" fill="#F00" />
  </svg>

  @Html.DeviceCoverage()

  <p>External SVG</p>

  <img src="/content/svg/circle.svg" />

  <p>More complicated (loaded externally). This svg file is taken from http://commons.wikimedia.org/wiki/File%3ATrajans-Column-lower-animated.svg.</p>

  <img src="/content/svg/building.svg" style="max-width: 100%;" />

  @Html.DeviceCoverage("ExternalSVG")

  <h2>Notes</h2>
  <ul>
    <li>Windows Phone 7 and 8 do not scale well when using max-width. Appears to not shrink proportionally.</li>
  </ul>

</body>
</html>
