    .navOpen nav {
      display: block;
      left: 0;
      position: absolute;
      width: 250px;
      -ms-transform: translateX(-250px);
      -webkit-transform: translateX(-250px);
      transform: translateX(-250px);
    }

    .navOpen li {
      border: none;
      margin: 0;
      padding: 15px 0px;
      width: 100%;
      overflow: hidden;
    }

    .navOpen {
      -ms-transform: translateX(250px);
      -webkit-transform: translateX(250px);
      transform: translateX(250px);
      -ms-transition: all 500ms ease;
      -webkit-transition: all 500ms ease;
      transition: all 500ms ease;
  }

}

